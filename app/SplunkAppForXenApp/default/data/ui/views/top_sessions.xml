<?xml version="1.0"?>
<view template="dashboard.html" stylesheet="dashboard2.css">
  <label>Top Sessions</label>
  <module name="AccountBar" layoutPanel="appHeader"/>
  <module name="AppBar" layoutPanel="navigationHeader"/>
  <module name="Message" layoutPanel="messaging">
    <param name="filter">*</param>
    <param name="clearOnJobDispatch">False</param>
    <param name="maxSize">1</param>
  </module>
  <module name="TitleBar" layoutPanel="viewHeader">
    <param name="actionsMenuFilter">dashboard</param>
  </module>
  <module name="StaticContentSample" layoutPanel="viewHeader">
    <param name="text">
      This dashboard lists servers by number of sessions in a given state. Select one of the links below to choose a specific session state.
    </param>
  </module>
  <module name="TimeRangePicker" layoutPanel="viewHeader">
    <param name="selected">Last 15 Minutes</param>
    <param name="searchWhenChanged">True</param>
    
    <module name="HiddenSearch" layoutPanel="panel_row1_col1" autoRun="True">
      <param name="search">`xenapp_index` `xa_sessions_sourcetype` | fields State ServerName FarmName</param>
    
      <module name="LinkSwitcher" group="Session State by Server" layoutPanel="panel_row1_col1">
        <param name="mode">independent</param>
        <param name="label"> </param>

        <module name="HiddenPostProcess" group="All" layoutPanel="panel_row1_col1">
          <param name="search">stats count by ServerName FarmName</param>
          <module name="SimpleResultsTable" layoutPanel="panel_row1_col1">
            <param name="displayMenu">true</param>
            <param name="count">100</param>
            <param name="drilldown">row</param>
            <param name="displayRowNumbers">True</param>
          </module>
        </module>

        <module name="HiddenPostProcess" group="Active" layoutPanel="panel_row1_col1">
          <param name="search">search State="Active" | stats count by ServerName FarmName</param>
          <module name="SimpleResultsTable" layoutPanel="panel_row1_col1">
            <param name="displayMenu">true</param>
            <param name="count">100</param>
            <param name="drilldown">row</param>
            <param name="displayRowNumbers">True</param>
          </module>
        </module>

        <module name="HiddenPostProcess" group="Idle" layoutPanel="panel_row1_col1">
          <param name="search">search State="Idle" | stats count by ServerName FarmName</param>
          <module name="SimpleResultsTable" layoutPanel="panel_row1_col1">
            <param name="displayMenu">true</param>
            <param name="count">100</param>
            <param name="drilldown">row</param>
            <param name="displayRowNumbers">True</param>
          </module>
        </module>

        <module name="HiddenPostProcess" group="Disconnected" layoutPanel="panel_row1_col1">
          <param name="search">search State="Disconnected" | stats count by ServerName FarmName</param>
          <module name="SimpleResultsTable" layoutPanel="panel_row1_col1">
            <param name="displayMenu">true</param>
            <param name="count">100</param>
            <param name="drilldown">row</param>
            <param name="displayRowNumbers">True</param>
          </module>
        </module>

      </module>

    </module>

  </module>
</view>