<view template="dashboard.html" stylesheet="dashboard2.css">
  <label>Session Statistics</label>
  <module name="AccountBar" layoutPanel="appHeader" />
  <module name="AppBar" layoutPanel="navigationHeader" />
  <module name="Message" layoutPanel="messaging">
    <param name="filter">*</param>
    <param name="clearOnJobDispatch">False</param>
    <param name="maxSize">1</param>
  </module>
  <module name="TitleBar" layoutPanel="viewHeader">
    <param name="actionsMenuFilter">dashboard</param>
  </module>
  <module name="GenericHeader" layoutPanel="panel_row1_col1">
    <param name="label">Citrix Xen Application Sessions</param>
  </module>
  <module name="StaticContentSample" layoutPanel="panel_row1_col1">
    <param name="text">This report provides details about the Citrix Xen Application sessions in your environment. Adjust the time range for this report by changing the timerange picker. You can filter this view by entering values in the fields below and pressing enter. Click on a panel to drill into the session details for that element.</param>
  </module>
  <module name="TimeRangePicker" layoutPanel="panel_row1_col1" autoRun="True">
    <param name="selected">first 24 Hours</param>
    <param name="searchWhenChanged">True</param>
    <module name="HiddenSearch" layoutPanel="panel_row1_col1" autoRun="True">
      <param name="search">index=xenapp sourcetype="CitrixXA6:Session" Protocol!="console" State!="Listening" | fields ClientVersion, ClientAddress, ClientName, LogOnTime, SessionUID, SessionId, AccountName, ServerName, FarmName |eval ep_LogOnTime=strptime(LogOnTime,"%m/%d/%Y %H:%M:%S") | eval Session_GUID=ep_LogOnTime.SessionId.ServerName</param>
      <module name="ViewRedirectorLink" layoutPanel="panel_row1_col1">
        <param name="viewTarget">flashtimeline</param>
        <param name="label">View Full Report</param>
      </module>
      <module name="JobProgressIndicator"></module>
      <module name="HiddenPostProcess" layoutPanel="panel_row3_col1_grp1" group="Session Stats" autoRun="True">
        <param name="search">| stats dc(Session_GUID) as Sessions| eval range="Sessions"</param>
        <module name="SingleValue">
          <param name="field">Sessions</param>
          <param name="classField">range</param>
          <param name="afterLabel">Sessions</param>
          <param name="format">count</param>
        </module>
      </module>
      <module name="HiddenPostProcess" layoutPanel="panel_row3_col1_grp2" group="Session Stats" autoRun="True">
        <param name="search">| stats dc(AccountName) as AccountName | eval range="AccountName"</param>
        <module name="SingleValue">
          <param name="field">AccountName</param>
          <param name="classField">range</param>
          <param name="afterLabel">Users</param>
          <param name="format">count</param>
        </module>
      </module>
      <module name="HiddenPostProcess" layoutPanel="panel_row3_col1_grp3" group="Session Stats" autoRun="True">
        <param name="search">| stats dc(ServerName) as ServerName | eval range="ServerName"</param>
        <module name="SingleValue">
          <param name="field">ServerName</param>
          <param name="classField">range</param>
          <param name="afterLabel">Servers</param>
          <param name="format">count</param>
        </module>
      </module>
      <module name="HiddenPostProcess" layoutPanel="panel_row6_col1" group="Top Users" autoRun="True">
        <param name="search">top AccountName |rename AccountName as User | fields User, count</param>
        <module name="SimpleResultsTable" layoutPanel="panel_row6_col1">
          <param name="displayMenu">true</param>
          <param name="count">100</param>
          <param name="drilldown">row</param>
          <param name="entityName">results</param>
          <param name="displayRowNumbers">False</param>
          <module name="HiddenSearch">
            <param name="search">index=xenapp sourcetype="CitrixXA6:Session" Protocol!="console" State!="Listening" $AccountName$</param>
            <module name="ConvertToIntention">
              <param name="intention">
                <param name="name">stringreplace</param>
                <param name="arg">
                  <param name="AccountName">
                    <param name="prefix">AccountName=</param>
                    <param name="fillOnEmpty">True</param>
                    <param name="value">$click.value$</param>
                  </param>
                </param>
              </param>
              <module name="ViewRedirector">
                <param name="viewTarget">flashtimeline</param>
              </module>
            </module>
          </module>
        </module>
      </module>
      <module name="HiddenPostProcess" layoutPanel="panel_row6_col2" group="Top Client IP" autoRun="True">
        <param name="search">top ClientAddress | fields ClientAddress, count</param>
        <module name="SimpleResultsTable" layoutPanel="panel_row6_col2">
          <param name="displayMenu">true</param>
          <param name="count">100</param>
          <param name="drilldown">row</param>
          <param name="entityName">results</param>
          <param name="displayRowNumbers">False</param>
          <module name="HiddenSearch">
            <param name="search">index=xenapp sourcetype="CitrixXA6:Session" Protocol!="console" State!="Listening" $ClientAddress$</param>
            <module name="ConvertToIntention">
              <param name="intention">
                <param name="name">stringreplace</param>
                <param name="arg">
                  <param name="ClientAddress">
                    <param name="prefix">ClientAddress=</param>
                    <param name="fillOnEmpty">True</param>
                    <param name="value">$click.value$</param>
                  </param>
                </param>
              </param>
              <module name="ViewRedirector">
                <param name="viewTarget">flashtimeline</param>
              </module>
            </module>
          </module>
        </module>
      </module>
      <module name="HiddenPostProcess" layoutPanel="panel_row6_col3" group="Top Server" autoRun="True">
        <param name="search">top ServerName | fields ServerName, count</param>
        <module name="SimpleResultsTable" layoutPanel="panel_row6_col3">
          <param name="displayMenu">true</param>
          <param name="count">100</param>
          <param name="drilldown">row</param>
          <param name="entityName">results</param>
          <param name="displayRowNumbers">False</param>
          <module name="HiddenSearch">
            <param name="search">index=xenapp sourcetype="CitrixXA6:Session" Protocol!="console" State!="Listening" $ServerName$</param>
            <module name="ConvertToIntention">
              <param name="intention">
                <param name="name">stringreplace</param>
                <param name="arg">
                  <param name="ServerName">
                    <param name="prefix">ServerName=</param>
                    <param name="fillOnEmpty">True</param>
                    <param name="value">$click.value$</param>
                  </param>
                </param>
              </param>
              <module name="ViewRedirector">
                <param name="viewTarget">xd5_session_info</param>
              </module>
            </module>
          </module>
        </module>
      </module>
      <module name="HiddenPostProcess" layoutPanel="panel_row7_col1" group="Top Broker" autoRun="True">
        <param name="search">top ServerName | fields ServerName, count</param>
        <module name="HiddenChartFormatter">
          <param name="chart">pie</param>
          <module name="FlashChart">
            <param name="height">200px</param>
            <module name="HiddenSearch">
              <param name="search">index=xenapp sourcetype="CitrixXA6:Session" Protocol!="console" State!="Listening" $ServerName$</param>
              <module name="ConvertToIntention">
                <param name="intention">
                  <param name="name">stringreplace</param>
                  <param name="arg">
                    <param name="ServerName">
                      <param name="prefix">ServerName="</param>
                      <param name="suffix">"</param>
                      <param name="fillOnEmpty">True</param>
                      <param name="value">$click.value$</param>
                    </param>
                  </param>
                </param>
                <module name="ViewRedirector">
                  <param name="viewTarget">flashtimeline</param>
                </module>
              </module>
            </module>
          </module>
        </module>
      </module>
      <module name="HiddenPostProcess" layoutPanel="panel_row7_col2" group="Top Device Type" autoRun="True">
        <param name="search">| eval c_type = substr(ClientName,0,3) | eval client_dvc_type = case(c_type == "mob", "Apple iPhone",c_type == "iPa", "iPad",c_type == "roi", "Android",ClientName == ClientName,"Desktop Receiver") | stats dc(SessionUID) by client_dvc_type</param>
        <module name="HiddenChartFormatter">
          <param name="chart">pie</param>
          <module name="FlashChart">
            <param name="height">200px</param>
            <module name="HiddenSearch">
              <param name="search">index=xenapp sourcetype="CitrixXA6:Session" Protocol!="console" State!="Listening" | eval c_type = substr(ClientName,0,3) | eval client_dvc_type = case(c_type == "mob", "Apple iPhone",c_type == "iPa", "iPad",c_type == "roi", "Android",ClientName == ClientName,"Desktop Receiver") </param>
              <module name="ConvertToIntention">
                <param name="intention">
                  <param name="name">stringreplace</param>
                  <param name="arg">
                    <param name="client_dvc_type">
                      <param name="prefix">client_dvc_type="</param>
                      <param name="suffix">"</param>
                      <param name="fillOnEmpty">True</param>
                      <param name="value">$click.value$</param>
                    </param>
                  </param>
                </param>
                <module name="ViewRedirector">
                  <param name="viewTarget">flashtimeline</param>
                </module>
              </module>
            </module>
          </module>
        </module>
      </module>
      <module name="HiddenPostProcess" layoutPanel="panel_row7_col3" group="Top Client Version" autoRun="True">
        <param name="search">top ClientVersion | fields ClientVersion, count</param>
        <module name="HiddenChartFormatter">
          <param name="chart">pie</param>
          <module name="FlashChart">
            <param name="height">200px</param>
            <module name="HiddenSearch">
              <param name="search">index=xenapp sourcetype="CitrixXA6:Session" Protocol!="console" State!="Listening" $ClientVersion$</param>
              <module name="ConvertToIntention">
                <param name="intention">
                  <param name="name">stringreplace</param>
                  <param name="arg">
                    <param name="ClientVersion">
                      <param name="prefix">ClientVersion=</param>
                      <param name="fillOnEmpty">True</param>
                      <param name="value">$click.value$</param>
                    </param>
                  </param>
                </param>
                <module name="ViewRedirector">
                  <param name="viewTarget">flashtimeline</param>
                </module>
              </module>
            </module>
          </module>
        </module>
      </module>
    </module>
  </module>
</view>
